<Window
    x:Class="MathProblemTools.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MathProblemTools"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="MainWindowName">

    <RelativePanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <NavigationView Background="DarkGreen" HorizontalAlignment="Left" IsPaneOpen="False" x:Name="NavView" ItemInvoked="NavView_ItemInvoked" PaneDisplayMode="LeftCompact" >
            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Home" Content="Home"/>
            </NavigationView.MenuItems>
        </NavigationView>
        <Frame RelativePanel.RightOf="NavView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="MainFrame"></Frame>
    </RelativePanel>
</Window>
